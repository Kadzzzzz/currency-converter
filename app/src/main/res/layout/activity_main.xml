<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvExchangeRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 USD = 0.92 EUR"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvExchangeRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layoutFromCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvFromFlag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‡ºðŸ‡¸"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvFromCurrency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="US Dollar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/tap_to_change"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etFromAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="none"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSwap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="@android:color/white"
            app:backgroundTint="@color/swap"
            app:layout_constraintTop_toBottomOf="@id/cardFrom"
            app:layout_constraintBottom_toTopOf="@id/cardTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/swap"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fabSwap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layoutToCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvToFlag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‡ªðŸ‡º"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvToCurrency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Euro"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/arrow_down_float"
                        android:contentDescription="@string/tap_to_change"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvToAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <GridLayout
            android:id="@+id/keypadGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardTo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn7"
                style="@style/KeypadButton"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/KeypadButton"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/KeypadButton"
                android:text="9" />

            <Button
                android:id="@+id/btnDelete"
                style="@style/KeypadButtonAction"
                android:text="âŒ«"
                app:backgroundTint="@color/delete" />

            <Button
                android:id="@+id/btn4"
                style="@style/KeypadButton"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/KeypadButton"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/KeypadButton"
                android:text="6" />

            <Button
                android:id="@+id/btnSwapKey"
                style="@style/KeypadButtonAction"
                android:text="â‡…"
                app:backgroundTint="@color/swap" />

            <Button
                android:id="@+id/btn1"
                style="@style/KeypadButton"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/KeypadButton"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/KeypadButton"
                android:text="3" />

            <Button
                android:id="@+id/btnConvert"
                style="@style/KeypadButtonAction"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:text="="
                app:backgroundTint="@color/convert" />

            <Button
                android:id="@+id/btnDot"
                style="@style/KeypadButton"
                android:text="." />

            <Button
                android:id="@+id/btn0"
                style="@style/KeypadButton"
                android:layout_columnSpan="2"
                android:text="0" />
        </GridLayout>

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_loading"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/keypadGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>